{
  "name": "@foundry-stack/installer",
  "type": "module",
  "version": "0.1.0-alpha",
  "description": "The Foundry Stack Installer.",
  "author": {
    "name": "Gera Schz",
    "username": "gschz",
    "url": "https://github.com/gschz",
    "email": "gschz.git@gmail.com"
  },
  "license": "MIT",
  "keywords": [
    "foundry-stack",
    "installer"
  ],
  "bin": {
    "foundry-installer": "./dist/index.js"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "test": "bun run lint && bun run build",
    "test:interactive": "bun src/index.ts",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "build": "bun build ./src/index.ts --outdir dist --target node --packages=external --banner \"#!/usr/bin/env node\"",
    "prepublishOnly": "bun run build && node -e \"if(process.platform!=='win32')require('node:child_process').execSync('chmod +x dist/index.js')\""
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "giget": "^2.0.0",
    "ora": "^9.0.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/node": "^25.0.0",
    "@types/prompts": "^2.4.9",
    "bun-types": "^1.3.4",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
