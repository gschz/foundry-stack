# ====================================================================
# == ENTORNO DE DESARROLLO LOCAL CON POSTGRESQL ==
# ====================================================================

# --- Variables de la Aplicación ---
APP_NAME="Foundry Stack - PostgreSQL"
APP_ENV=local
APP_KEY= # ¡IMPORTANTE! Genera una clave para tu entorno PostgreSQL y pégala aquí.
APP_DEBUG=true
APP_URL=http://localhost:8080
FRONTEND_URL=http://localhost:5173
APP_RUNNING_IN_CONTAINER=false

# --- Configuración de Logging ---
LOG_CHANNEL=daily
LOG_LEVEL=debug
LOG_DEPRECATIONS_CHANNEL=null
LOG_DAYS=7

# --- Configuración de Sesión y CORS ---
SANCTUM_STATEFUL_DOMAINS=localhost:5173,localhost:8080,127.0.0.1:5173,127.0.0.1:8080
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_COOKIE=PROJECT_SESSION
SESSION_DOMAIN=localhost
SESSION_SAME_SITE=lax
SESSION_SECURE_COOKIE=false

# --- Configuración de PostgreSQL local ---
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=foundry
DB_USERNAME=postgres
DB_PASSWORD=postgres

QUEUE_CONNECTION=sync

VITE_APP_NAME="${APP_NAME}"
VITE_APP_URL="${APP_URL}"

# --- Configuración para mostrar errores detallados de Laravel en lugar de los personalizados de Inertia ---
SHOW_LARAVEL_ERRORS=true

# --- Configuración de Carga de Entorno (Bun/Bootstrap) ---
# Identidad explícita de este archivo de entorno. 
LARAVEL_ENV_FILE=.envs/.env.pg.local
