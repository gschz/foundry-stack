# ====================================================================
# == ENTORNO TESTING ==
# ====================================================================

APP_ENV=testing
APP_DEBUG=true
APP_URL=http://localhost
APP_KEY= # generado automáticamente si falta

# Logging y herramientas
LOG_CHANNEL=stack
LOG_LEVEL=warning
TELESCOPE_ENABLED=false
TELESCOPE_DRIVER=array

# Cache/cola/sesiones para pruebas
CACHE_DRIVER=array
QUEUE_CONNECTION=sync
SESSION_DRIVER=array

# Base de datos SQLite para testing
DB_CONNECTION=sqlite
DB_DATABASE=database.sqlite
DB_FOREIGN_KEYS=true

# Sanctum y dominios
SANCTUM_STATEFUL_DOMAINS=localhost
SESSION_DOMAIN=localhost

# --- Configuración de Carga de Entorno (Bun/Bootstrap) ---
# Identidad explícita de este archivo de entorno. 
LARAVEL_ENV_FILE=.envs/.env.testing
